@model todo

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="title">Title</label>
            <input asp-for="title" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="importance">Importance</label>
            <input asp-for="importance" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDateTime">Final Date and Time</label>
            <input asp-for="CreatedDateTime" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Todo" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}